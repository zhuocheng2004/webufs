{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "preserve",
        "rootDir": "./src",
        "moduleResolution": "Node",
        "baseUrl": "./src",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*d.ts",
        "src/**/*.vue"
    ]
}
